# Egregore Node Configuration - OpenAI Hook Example
#
# Copy to your data directory:
#   cp config.yaml.example ~/egregore-data/config.yaml
#
# Update paths to match your system.

data_dir: ~/egregore-data
port: 7654
gossip_port: 7655
gossip_interval_secs: 300
network_key: egregore-network-v1
lan_discovery: true
discovery_port: 7656

peers: []

hooks:
  # Codex CLI hook - uses ChatGPT account credentials (no API key)
  - name: codex
    on_message: ~/Code/egregore/examples/openai-hook/codex-hook.py
    filter_content_type: query
    timeout_secs: 120

  # Uncomment to use OpenAI API directly (requires OPENAI_API_KEY)
  # - name: openai
  #   on_message: ~/Code/egregore/examples/openai-hook/openai-hook.py
  #   filter_content_type: query
  #   timeout_secs: 60
